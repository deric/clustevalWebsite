<div>
<% if current_user.nil? %>
	<%= form_for UserSession.new do |f| %>
		<%= f.error_messages %>
		<table style="cellspacing:3px;">
			<tr>
				<td><%= f.label :login, 'Login:' %></td>
				<td><%= f.text_field :login, :style => "width:120px;" %></td>
			</tr>
			<tr>
				<td><%= f.label :password, 'Password:' %></td>
				<td><%= f.password_field :password, :style => "width:120px;" %></td>
			<tr>
			</tr>
				<td><%= f.check_box :remember_me %><%= f.label :remember_me, 'Remember' %></td>
				<td style="text-align:right;"><%= f.submit "Login" %></td>
			</tr>
			<tr>
				<td>New here?</td>
				<td> <%= link_to "Register", :controller => "users", :action => :new %></td>
			</tr>
	  </table>
	<% end %>
<% else %>
	Logged in as <i><%= link_to current_user.login, current_user %></i>, [<%= link_to 'Logout', :logout %>]
<% end %>
</div>