<% content_for :title, "Data Set '" + @dataset.alias + "' - General" %>
<%= render_cell :dataset_description, :display, :dataset =>  @dataset, :detailsLink => false %>
<table id="dataset" class="display">
  <thead>
	<tr>
	<th>Information</th>
	<th>Value</th>
	</tr>
  </thead>
  <tbody>
  <tr>
    <td>Alias</td><td><%= @dataset.alias %></td>
  </tr>
  <tr>
    <td>Name</td><td><%= @dataset.absPath.split('/')[-2] + "/" + @dataset.absPath.split('/')[-1] %></td>
  </tr>
  <tr>
    <td>Dataset format</td><td><%= @dataset.dataset_format.name %></td>
  </tr>
  <tr>
    <td>Download</td><td><%= link_to 'Click', :controller => 'datasets', :action => 'download', :id => @dataset.id %><% if @license %> (by downloading the dataset you accept the license presented below)<% end %></td>
  </tr>
  <% if @license %>
  <tr>
    <td>License</td>
    <td>
      <textarea readonly="readonly" rows="7">
      <%= @license %>
      </textarea>
    </td>
  </tr>
  <% end %>
  <tr>
    <td>First <%= @contents.count("\n") %> lines</td><td>
<textarea readonly="readonly" rows="7">
<%= @contents %>
</textarea></td>
  </tr>
  </tbody>
</table>