<div class="resizable">
  <div id="comparison_chart" style="height:500px; width:95%;">
  </div>
</div>

<script type="text/javascript">
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
    
            chart: {
                renderTo: 'comparison_chart',
                type: 'column',
                marginBottom: 200
            },
    
            title: {
                text: 'Clustering qualities'
            },
    
            xAxis: {
                categories: [<% ClusteringQualityMeasure.all(session).sort_by{|x| x.alias}.each do |measure| %><% if @visibleMeasures[measure] %>'<%= measure.alias %>',<% end %><% end %>],
                labels: {
                  enabled: true,
                  rotation: -45,
                  align: 'right'
                }
            },
            yAxis: {
                title: {
                    text: 'Clustering Quality'
                },
                min: <%= @minY %>,
                max: <%= @maxY %>,
            },
    
            tooltip: {
                formatter: function() {
                    return '<b>'+ this.x +'</b><br/>'+
                        this.series.name +': '+ this.y;
                }
            },
            plotOptions: {
              column: {
                borderWidth: 1,
                borderColor: '#000000',
                pointPadding: 0,
                shadow: false
              }
            },
            series: [
<% Dataset.all(session).sort_by{|x| x.name}.each do |dataset| %>
<% if @visibleDatasets[dataset] %>
{
  name: '<%= dataset.name %>',
  data: [<% ClusteringQualityMeasure.all(session).sort_by{|x| x.alias}.each do |measure| %>
  <% if @visibleMeasures[measure] %>
    <% @qual = @matrix[@datasetIds[dataset]][@measureIds[measure]] %>
    <% if @qual != "--" %>
      <%= @qual %>
    <% else %>
      null
    <% end %>,<% end %><% end %>]
},
<% end %>
<% end %>
            ]
        });

      $( ".resizable" ).resizable({
        helper: "ui-resizable-helper",
        stop: function( event, ui ) {
          chart.setSize(ui.size.width,ui.size.height,doAnimation = true);
        }
      });
    });
});
</script>

